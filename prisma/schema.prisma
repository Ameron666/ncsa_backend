generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Subject {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  fullName String @unique
}

model Room {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  fullName String
  floor    String
}

model Group {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  fullName String @unique
  course   String
}

model Student {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  fullName         String
  recordBookNumber String @unique
  group            String
  subgroup         String
  login            String @unique
  password         String
}

model Teacher {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  fullName String
  position String
  login    String @unique
  password String
}

